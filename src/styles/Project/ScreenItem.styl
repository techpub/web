@import "nib"
@import "../common"

.screen-item
  position: relative

.screen-item__name
  line-height: 1
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  display: block
  user-select: none
  padding: padding-small padding-medium + 12px padding-small padding-medium
  text-decoration: none
  color: inherit
  .screen-item--selected &
    background: lighten(color-project-sidebar, 5%)

.screen-item__dropdown
  position: absolute
  top: 0
  right: 0
  bottom: 0

.screen-item__more-btn
  background: none
  border: none
  padding: 0 12px
  line-height: 30px
  &:hover
    background: #666

.screen-item--main
  &:before
    content: ""
    position: absolute
    top: 0
    bottom: 0
    left: 5px
    margin: auto
    width: 6px
    height: 6px
    border-radius: 50%
    background: color-accent