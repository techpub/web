@import "nib"
@import "../common"

.modal
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 1000
  display: table

.modal__back
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: #000
  opacity: 0.7
  z-index: -1

.modal__container
  display: table-cell
  vertical-align: middle

.modal__dialog
  width: 500px
  margin: auto
  background: #fff
  padding: 20px
  border-radius: 3px
  box-shadow: 1px 3px 20px rgba(0, 0, 0, 0.2)

.modal__title
  margin: 0