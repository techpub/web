@import "nib"
@import "../common"

.color-picker__toggle
  height: 20px
  width: 60px
  position: relative
  overflow: hidden
  border-radius: 3px
  border: 1px solid rgba(0, 0, 0, 0.15)

.color-picker__toggle-color
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: 2

.color-picker__dialog
  position: fixed
  width: 220px
  padding: 10px 10px 0px
  z-index: 10
  background: #fff
  box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.15), 0 8px 16px rgba(0, 0, 0, 0.15)
  border-radius: 4px

.color-picker__saturation
  padding-bottom: 75%
  width: 100%
  position: relative
  overflow: hidden
  border-radius: 3px
  &:after
    content: ""
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    pointer-events: none
    box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.15), inset 0 0 4px rgba(0, 0, 0, 0.25)

.color-picker__slider
  height: 10px
  position: relative
  overflow: hidden
  margin: 4px 0
  border-radius: 2px
  &:after
    content: ""
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    pointer-events: none
    box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.15), inset 0 0 4px rgba(0, 0, 0, 0.25)

.color-picker__preset-color-group
  padding: 10px 0 0 10px
  border-top: 1px solid color-divider
  margin: 0 -10px

.color-picker__preset-color
  float: left
  border-radius: 3px
  margin: 0 10px 10px 0
  cursor: pointer
  width: 16px
  height: 16px
  box-shadow: 0px 0px 0px 1px rgba(0, 0, 0, 0.15) inset
  border: none

.color-picker__input-group
  display: flex
  flex-flow: row
  padding: 4px 0

$color-picker-input
  text-align: center
  input
    width: 100%
    font-size: 12px
    color: #555
    border: none
    padding: 0 0 4px
    text-align: center
    border-bottom: 1px solid color-divider
    outline: none
    &:focus
      border-bottom-color: color-accent
  span
    font-size: 12px
    color: #555
    text-transform: capitalize
    display: block
    padding: 4px 0
    line-height: 1

.color-picker__input-double
  @extend $color-picker-input
  flex: 2

.color-picker__input-single
  @extend $color-picker-input
  flex: 1
  padding-left: 6px