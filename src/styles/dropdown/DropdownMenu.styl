@import "nib"
@import "../common"

.dropdown-menu
  display: none
  position: absolute
  top: 100%
  list-style: none
  background: #fff
  border-radius: 4px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)
  margin: 16px 0 0
  padding: 5px 0
  z-index: 1000
  .dropdown--active &
    display: block

.dropdown-menu--left
  left: 0

.dropdown-menu--right
  right: 0

.dropdown-menu--fixed
  position: fixed
  margin-top: -9999px
  display: block
  .dropdown--active &
    margin-top: 0

.dropdown-menu__triangle
  position: absolute
  border-style: solid
  border-width: 8px
  border-color: transparent transparent #fff
  top: @border-width * -2
  .dropdown-menu--left &
    left: 16px
  .dropdown-menu--right &
    right: 16px
  .dropdown-menu--fixed &
    display: none