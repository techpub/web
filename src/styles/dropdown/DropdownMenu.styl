@import "nib"
@import "../common"

.dropdown-menu
  display: none
  position: absolute
  top: 100%
  list-style: none
  background: #fff
  border-radius: 4px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)
  margin: 16px 0 0
  padding: 5px 0
  z-index: 1000
  &:before
    content: ""
    position: absolute
    border-style: solid
    border-width: 8px
    border-color: transparent transparent @background
    top: @border-width * -2
  .dropdown--active &
    display: block

.dropdown-menu--left
  left: 0
  &:before
    left: 16px

.dropdown-menu--right
  right: 0
  &:before
    right: 16px

.dropdown-menu--fixed
  position: fixed
  &:before
    left: 16px