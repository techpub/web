@import "nib"
@import "../common"

.event-item
  padding: 0 padding-medium
  position: relative
  cursor: pointer

.event-item__content
  line-height: 1
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  padding: padding-small 0
  i
    margin-right: 0.5em

.event-item__dropdown
  position: absolute
  top: 0
  right: 0
  bottom: 0

.event-item__more-btn
  background: none
  border: none
  padding: 0 12px
  line-height: 30px
  &:hover
    background: #666