@import "nib"
@import "../common"

.screen
  float: right
  height: 100%
  width: 100%

.screen__container
  clearfix()
  height: 100%

.screen__container--full
  margin-right: element-sidebar-width

.screen__content
  float: left
  width: 100%
  height: 100%
  position: relative

.screen__view
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 360px
  height: 640px
  margin: auto
  user-select: none
  &.ios
    font-family: Helvetica Neue, Helvetica, Arial, sans-serif
    color: #000
    font-size: 14px
    line-height: 1.4
    background: #fff
  &.material
    font-family: Roboto, Noto, Helvetica, Arial, sans-serif
    color: #212121
    font-size: 14px
    line-height: 1.5
    background: #fff