@import "nib"
@import "../common"
@import "../button"

.attribute-palette
  padding: 0 padding-medium
  position: relative
  height: 100%
  overflow: hidden
  .input-group__field
    border-bottom-color: lighten(color-project-sidebar, 20%)
  .tab-host__tabs
    text-align: center
  .tab-host__tab
    padding: 0 padding-small
    height: palette-title-height
    line-height: palette-title-height
    color: color-secondary-text
    cursor: pointer
    &.active
      color: color-highlight
    &:hover
      color: color-highlight
  .tab-host__content
    position: absolute
    top: palette-title-height
    left: 0
    right: 0
    bottom: 0
    overflow: auto
    padding: 0 padding-medium

$attribute-palette-btn
  @extend $button-small
  margin-right: padding-small
  margin-bottom: padding-small
  i
    padding-right: 0.5em

.attribute-palette__main-screen-btn
  @extend $attribute-palette-btn
  @extend $button-primary

.attribute-palette__delete-btn
  @extend $attribute-palette-btn
  @extend $button-danger

.attribute-palette__choose-asset-btn
  @extend $attribute-palette-btn
  @extend $button-primary

.attribute-palette__visible-checkbox
  padding-bottom: padding-medium