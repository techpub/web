@import "nib"
@import "../common"
@import "../button"

.attribute-palette
  position: relative
  height: 100%
  overflow: auto
  .input-group__field
    border-bottom-color: lighten(color-project-sidebar, 20%)
  > .tab-host__tabs
    display: flex
    flex-flow: row nowrap
    border-bottom: 1px solid color-list-highlight
    .tab-host__tab
      height: palette-title-height
      line-height: palette-title-height
      color: color-secondary-text
      cursor: pointer
      flex: 1 1 auto
      text-align: center
      font-size: 20px
      border-bottom: 2px solid transparent
      &.active
        color: color-highlight
        border-bottom-color: color-accent
      &:hover
        color: color-highlight
  > .tab-host__content
    position: absolute
    top: palette-title-height
    left: 0
    right: 0
    bottom: 0
    overflow: auto
    padding: 0 padding-medium

.attribute-palette__content
  padding: 0 padding-medium
  .input-group__field
    border-bottom-color: lighten(color-project-sidebar, 20%)

.attribute-palette__btn-group
  display: flex
  flex-flow: row nowrap

$attribute-palette-btn
  @extend $button-small
  margin-right: padding-small
  white-space: nowrap
  i
    padding-right: 0.5em

.attribute-palette__main-screen-btn
  @extend $attribute-palette-btn
  @extend $button-primary

.attribute-palette__delete-btn
  @extend $attribute-palette-btn
  @extend $button-danger

.attribute-palette__choose-asset-btn
  @extend $attribute-palette-btn
  @extend $button-primary

.attribute-palette__visible-checkbox
  padding-bottom: padding-medium