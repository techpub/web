@import "nib"
@import "../common"

.event-list__header
  clearfix()
  padding: padding-medium 0 padding-small

.event-list__title
  float: left
  margin: 0

.event-list__new-btn
  float: right
  background: none
  border: none
  margin-right: padding-medium * -1
  margin-top: padding-small * -1
  padding: padding-small padding-medium
  cursor: pointer
  outline: none
  &:hover
    color: color-accent

.event-list__list
  list-style: none
  padding: 0
  margin: 0 padding-medium * -1