@import "nib"
@import "../common"

.element-item
  position: relative

.element-item__content
  clearfix()
  position: relative
  user-select: none
  cursor: default
  .element-item--selected > &
    background: color-list-highlight
  .element-item--over > &
    background: rgba(color-accent, 0.5)
  .element-item--hidden > &
    color: color-secondary-text
    .element-item__name
      padding-right: 32px

.element-item--dragging
  visibility: hidden

.element-item__toggle
  width: 20px
  position: absolute
  top: 0
  left: 0
  bottom: 0
  line-height: 28px
  text-align: center

.element-item__name
  line-height: 1
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis
  padding: padding-small padding-small padding-small 20px
  display: block

.element-item__dropdown
  position: absolute
  top: 0
  right: 0
  bottom: 0

.element-item__more-btn
  background: none
  border: none
  padding: 0 12px
  line-height: 30px
  &:hover
    background: #666

.element-item__hidden-icon
  position: absolute
  top: 0
  right: padding-small
  bottom: 0
  margin: auto
  height: 1em
  line-height: 1