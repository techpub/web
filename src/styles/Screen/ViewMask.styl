@import "nib"
@import "../common"
@import "../preview/theme"

.view-mask
  height: 100%
  position: relative

$view-resize-area
  position: fixed

.view-mask__resize-n
  @extend $view-resize-area
  cursor: n-resize
  border-top: 2px solid color-accent

.view-mask__resize-e
  @extend $view-resize-area
  cursor: e-resize
  border-right: 2px solid color-accent

.view-mask__resize-s
  @extend $view-resize-area
  cursor: s-resize
  border-bottom: 2px solid color-accent

.view-mask__resize-w
  @extend $view-resize-area
  cursor: w-resize
  border-left: 2px solid color-accent

$view-resize-corner
  @extend $view-resize-area
  background: color-accent

.view-mask__resize-ne
  @extend $view-resize-corner
  cursor: ne-resize

.view-mask__resize-se
  @extend $view-resize-corner
  cursor: se-resize

.view-mask__resize-sw
  @extend $view-resize-corner
  cursor: sw-resize

.view-mask__resize-nw
  @extend $view-resize-corner
  cursor: nw-resize

.view-mask__mask
  background: color-accent
  opacity: 0.5
  position: fixed
  pointer-events: none