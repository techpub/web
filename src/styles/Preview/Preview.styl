@import "nib"
@import "../common"

.preview__container
  position: relative
  height: 100%

.preview__frame
  width: 360px
  height: 640px
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: auto
  position: absolute
  border: none
  background: #fff

.preview__qrcode
  position: absolute
  bottom: padding-medium
  right: padding-medium
  width: 80px
  height: @width
  padding: 4px
  border-radius: 4px
  background: #fff